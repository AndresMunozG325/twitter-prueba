<p id="notice"><%= notice %></p>
<div class="container">
  <p>
    <strong>Tweet:</strong>
    <%= @tweet.contents %>
  </p>

  <p>This tweet has  <%= @tweet.likes.count %> <%= (@tweet.likes.count) == 1 ? 'Like' : 'Likes'%></p>

  <% Like.where(tweet_id: @tweet.id).each do |profile_p| %>
    <% profile_picture =  profile_p.user_id %>
      <div class="tweet-header">
        <%= image_tag User.find(profile_picture).profile_picture, :class => "avator" %>
          <div class="tweet-header-info">
            <strong><%= User.find(profile_picture).name %></strong>
          </div>
      </div>
      <br>
      <br>                     
  <% end %>
<%= link_to 'Back', root_path %>
</div>

